<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!--HSK-RR-Content-->

<Operation Class="XmlExtensions.OptionalPatch">
    <modId>HSKRRContent.Settings</modId>
    <key>DroidEnergyComa</key>
    <defaultValue>true</defaultValue>
    
	<caseTrue>
		<Operation Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<ThingDef>
				  <defName>DroidEnergyComaDummyDefForSettings</defName>
				  <label>DroidEnergyComaDummy</label>
				  <thingClass>Thing</thingClass>
				  <modExtensions>
					<li Class="DroidEnergyComa.DroidEnergyComa_Extension">
					  <replaceDroidDeathWithComa>true</replaceDroidDeathWithComa>
					</li>
				  </modExtensions>
				</ThingDef>
			</value>
		</Operation>
    </caseTrue>
	
	<caseFalse>
		<Operation Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<ThingDef>
				  <defName>DroidEnergyComaDummyDefForSettings</defName>
				  <label>DroidEnergyComaDummy</label>
				  <thingClass>Thing</thingClass>
				  <modExtensions>
					<li Class="DroidEnergyComa.DroidEnergyComa_Extension">
					  <replaceDroidDeathWithComa>false</replaceDroidDeathWithComa>
					</li>
				  </modExtensions>
				</ThingDef>
			</value>
		</Operation>
    </caseFalse>
	
</Operation>

</Patch>